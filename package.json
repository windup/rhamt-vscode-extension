{
    "name": "rhamt-vscode-extension",
    "displayName": "Red Hat Application Migration Toolkit",
    "description": "Application Migration and Modernization using RHAMT.",
    "version": "0.0.8",
    "license": "MIT",
    "publisher": "redhat",
    "author": "Red Hat",
    "preview": true,
    "icon": "resources/openshift_logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/windup/rhamt-vscode-extension"
    },
    "bugs": "https://github.com/windup/rhamt-vscode-extension/issues",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Migration",
        "RHAMT",
        "Windup",
        "JBoss",
        "Analyze"
    ],
    "activationEvents": [
        "onCommand:rhamt.createConfiguration",
        "onCommand:rhamt.showRhamtExplorer",
        "onView:rhamtExplorerView"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "category": "RHAMT",
                "command": "rhamt.newConfiguration",
                "title": "New Configuration",
                "icon": {
                    "light": "resources/light/add.svg",
                    "dark": "resources/dark/add-inverse.svg"
                }
            },
            {
                "command": "rhamt.showRhamtExplorer",
                "title": "Show Explorer"
            },
            {
                "command": "rhamt.runConfiguration",
                "title": "Run"
            },
            {
                "command": "rhamt.deleteConfiguration",
                "title": "Delete"
            },
            {
                "command": "rhamt.openConfiguration",
                "title": "Open"
            },
            {
                "command": "rhamt.openReport",
                "title": "Open Report"
            },
            {
                "command": "rhamt.openDoc",
                "title": "Open Code"
            },
            {
                "command": "rhamt.openIssueDetails",
                "title": "View Details"
            },
            {
                "command": "rhamt.openIssue",
                "title": "Open"
            },
            {
                "command": "rhamt.refreshResults",
                "title": "Refresh"
            },
            {
                "command": "rhamt.deleteIssue",
                "title": "Delete"
            },
            {
                "command": "rhamt.markIssueAsComplete",
                "title": "Mark as Complete"
            },
            {
                "command": "rhamt.deleteResults",
                "title": "Delete"
            }
        ],
        "configuration": [
            {
                "title": "Red Hat Application Migration Toolkit (RHAMT)",
                "properties": {
                    "rhamt.executable.path": {
                        "type": "string",
                        "default": "",
                        "description": "Specifies absolute path of rhamt-cli executable",
                        "scope": "window"
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "rhamt-explorer",
                    "title": "RHAMT",
                    "icon": "resources/dep.svg"
                }
            ]
        },
        "views": {
            "rhamt-explorer": [
                {
                    "id": "rhamtExplorerView",
                    "name": "Explorer"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "rhamt.newConfiguration",
                    "when": "view == rhamtExplorerView",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "rhamt.runConfiguration",
                    "when": "view == rhamtExplorerView && viewItem == rhamtConfiguration"
                },
                {
                    "command": "rhamt.deleteConfiguration",
                    "when": "view == rhamtExplorerView && viewItem == rhamtConfiguration"
                },
                {
                    "command": "rhamt.openConfiguration",
                    "when": "view == rhamtExplorerView && viewItem == rhamtConfiguration"
                },
                {
                    "command": "rhamt.refreshResults",
                    "when": "view == rhamtExplorerView && viewItem == rhamtConfiguration"
                },
                {
                    "command": "rhamt.openReport",
                    "when": "view == rhamtExplorerView && viewItem == issue"
                },
                {
                    "command": "rhamt.openReport",
                    "when": "view == rhamtExplorerView && viewItem == report"
                },
                {
                    "command": "rhamt.openDoc",
                    "when": "view == rhamtExplorerView && viewItem == issue"
                },
                {
                    "command": "rhamt.openIssueDetails",
                    "when": "view == rhamtExplorerView && viewItem == issue"
                },
                {
                    "command": "rhamt.openIssue",
                    "when": "view == rhamtExplorerView && viewItem == issue"
                },
                {
                    "command": "rhamt.deleteIssue",
                    "when": "view == rhamtExplorerView && viewItem == issue"
                },
                {
                    "command": "rhamt.markIssueAsComplete",
                    "when": "view == rhamtExplorerView && viewItem == issue"
                },
                {
                    "command": "rhamt.deleteResults",
                    "when": "view == rhamtExplorerView && viewItem == results"
                },
                {
                    "command": "rhamt.newConfiguration",
                    "when": "view == rhamtExplorerView && viewItem != issue && viewItem != rhamtConfiguration"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/cheerio": "^0.22.10",
        "@types/mocha": "^5.2.6",
        "@types/node": "^7.0.43",
        "@types/sinon": "^5.0.7",
        "@types/sinon-chai": "^3.2.2",
        "@types/fs-extra": "^7.0.0",
        "@types/socket.io": "^1.4.36",
        "@types/socket.io-client": "^1.4.32",
        "chai": "^4.2.0",
        "sinon": "^7.2.7",
        "sinon-chai": "^3.3.0",
        "tslint": "^5.11.0",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.3.3333",
        "vscode": "^1.1.33"
    },
    "dependencies": {
        "@eclipse-che/plugin": "latest",
        "@types/jquery": "^3.3.30",
        "cheerio": "^1.0.0-rc.3",
        "express": "^4.17.1",
        "find-java-home": "^0.2.0",
        "fs-extra": "^8.0.1",
        "jade": "^1.11.0",
        "jsonc-parser": "^2.1.0",
        "mkdirp": "^0.5.1",
        "node-stream-zip": "^1.8.0",
        "opn": "^5.5.0",
        "request": "^2.88.0",
        "request-progress": "^3.0.0",
        "serve-static": "^1.14.1",
        "showdown": "^1.9.0",
        "socket.io": "^2.1.1",
        "socket.io-client": "^2.1.1",
        "tmp": "^0.1.0",
        "vscode-nls": "^2.0.2"
    }
}
