{
    "name": "mta-vscode-extension",
    "displayName": "Migration Toolkit for Applications",
    "description": "Migration Toolkit for Applications (MTA)",
    "version": "0.0.93",
    "license": "MIT",
    "publisher": "redhat",
    "author": "Red Hat",
    "preview": true,
    "icon": "resources/mta.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/windup/rhamt-vscode-extension"
    },
    "bugs": "https://github.com/windup/rhamt-vscode-extension/issues",
    "engines": {
        "vscode": "^1.59.1"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Migration",
        "Migrate",
        "MTA",
        "RHAMT",
        "Windup",
        "JBoss",
        "Analyze"
    ],
    "activationEvents": [
        "onCommand:rhamt.createConfiguration",
        "onCommand:rhamt.newRuleset",
        "onCommand:rhamt.showRhamtExplorer",
        "onView:rhamtExplorerView",
        "onWebviewPanel:rhamtConfigurationEditor"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "category": "Migration Toolkit for Applications (MTA)",
                "command": "rhamt.newConfiguration",
                "title": "New Configuration",
                "icon": {
                    "light": "resources/light/add.svg",
                    "dark": "resources/dark/add-inverse.svg"
                }
            },
            {
                "command": "rhamt.showRhamtExplorer",
                "title": "Show Explorer"
            },
            {
                "command": "rhamt.runConfiguration",
                "title": "Run",
                "enablement": "mta-cli-enabled",
                "icon": "$(run)"
            },
            {
                "command": "rhamt.deleteConfiguration",
                "title": "Delete",
                "icon": "$(trash)"
            },
            {
                "command": "rhamt.openConfiguration",
                "title": "Open"
            },
            {
                "command": "rhamt.openReportExternal",
                "title": "Open Report"
            },
            {
                "command": "rhamt.openDoc",
                "title": "Open Code"
            },
            {
                "command": "rhamt.openIssueDetails",
                "title": "View Details"
            },
            {
                "command": "rhamt.refreshResults",
                "title": "Refresh"
            },
            {
                "command": "rhamt.deleteIssue",
                "title": "Delete"
            },
            {
                "command": "rhamt.markIssueAsComplete",
                "title": "Mark as Complete"
            },
            {
                "command": "rhamt.markIssueAsIncomplete",
                "title": "Mark as Incomplete"
            },
            {
                "command": "rhamt.deleteResults",
                "title": "Delete Analysis Results"
            },
            {
                "command": "rhamt.newRuleset",
                "title": "New Ruleset"
            },
            {
                "command": "rhamt.applyQuickfix",
                "title": "Apply Quickfix"
            },
            {
                "command": "rhamt.applyQuickfixes",
                "title": "Apply All Quickfixes"
            },
            {
                "command": "rhamt.previewQuickfix",
                "title": "Preview Quickfix"
            },
            {
                "command": "rhamt.activate",
                "title": "Activate Analysis"
            },
            {
                "command": "rhamt.deactivate",
                "title": "Deactivate Analysis"
            }
        ],
        "configuration": [
            {
                "title": "Migration Toolkit for Applications (MTA)",
                "properties": {
                    "mta.executable.path": {
                        "type": "string",
                        "default": "",
                        "description": "Specifies absolute path to the Migration Toolkit for Applications executable (e.g., /path/to/mta/bin/mta-cli)",
                        "scope": "window"
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "rhamt-explorer",
                    "title": "MTA",
                    "icon": "resources/mta.svg"
                }
            ]
        },
        "views": {
            "rhamt-explorer": [
                {
                    "id": "rhamtExplorerView",
                    "name": "Explorer"
                }
            ]
        },
        "snippets": [
            {
                "language": "xml",
                "path": "./rule-snippets/xml.json"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "rhamt.newConfiguration",
                    "when": "view == rhamtExplorerView",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "rhamt.runConfiguration",
                    "when": "view == rhamtExplorerView && viewItem =~ /rhamtConfiguration/i",
                    "group": "rhamt"
                },
                {
                    "command": "rhamt.runConfiguration",
                    "when": "view == rhamtExplorerView && viewItem =~ /rhamtConfiguration/i",
                    "group": "inline"
                },
                {
                    "command": "rhamt.deleteConfiguration",
                    "when": "view == rhamtExplorerView && viewItem =~ /rhamtConfiguration/i",
                    "group": "z"
                },
                {
                    "command": "rhamt.deleteConfiguration",
                    "when": "view == rhamtExplorerView && viewItem =~ /rhamtConfiguration/i",
                    "group": "inline"
                },
                {
                    "command": "rhamt.openConfiguration",
                    "when": "view == rhamtExplorerView && viewItem =~ /rhamtConfiguration/i",
                    "group": "rhamt"
                },
                {
                    "command": "rhamt.refreshResults",
                    "when": "view == rhamtExplorerView && viewItem =~ /rhamtConfiguration/i",
                    "group": "rhamt"
                },
                {
                    "command": "rhamt.openReportExternal",
                    "when": "view == rhamtExplorerView && viewItem =~ /hasReport/i",
                    "group": "rhamt@1"
                },
                {
                    "command": "rhamt.openReportExternal",
                    "when": "view == rhamtExplorerView && viewItem == report",
                    "group": "rhamt@1"
                },
                {
                    "command": "rhamt.openDoc",
                    "when": "view == rhamtExplorerView && viewItem =~ /issue/i",
                    "group": "rhamt@0"
                },
                {
                    "command": "rhamt.openIssueDetails",
                    "when": "view == rhamtExplorerView && viewItem =~ /issue/i",
                    "group": "rhamt@2"
                },
                {
                    "command": "rhamt.deleteIssue",
                    "when": "view == rhamtExplorerView && viewItem =~ /issue/i",
                    "group": "rhamt@4"
                },
                {
                    "command": "rhamt.markIssueAsComplete",
                    "when": "view == rhamtExplorerView && viewItem =~ /isIncomplete/i",
                    "group": "rhamt@3"
                },
                {
                    "command": "rhamt.markIssueAsIncomplete",
                    "when": "view == rhamtExplorerView && viewItem =~ /isComplete/i",
                    "group": "rhamt@3"
                },
                {
                    "command": "rhamt.deleteResults",
                    "when": "view == rhamtExplorerView && viewItem == results",
                    "group": "rhamt"
                },
                {
                    "command": "rhamt.applyQuickfix",
                    "when": "view == rhamtExplorerView && viewItem =~ /hasQuickfix/i",
                    "group": "rhamt"
                },
                {
                    "command": "rhamt.previewQuickfix",
                    "when": "view == rhamtExplorerView && viewItem =~ /hasQuickfix/i",
                    "group": "rhamt"
                },
                {
                    "command": "rhamt.applyQuickfixes",
                    "when": "view == rhamtExplorerView && viewItem =~ /quickfix-container/i",
                    "group": "rhamt@5"
                },
                {
                    "command": "rhamt.activate",
                    "when": "view == rhamtExplorerView && viewItem =~ /hasResults-notActive/i",
                    "group": "inline"
                },
                {
                    "command": "rhamt.deactivate",
                    "when": "view == rhamtExplorerView && viewItem =~ /hasResults-isActive/i",
                    "group": "inline"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/cheerio": "0.22.10",
        "@types/fs-extra": "^7.0.0",
        "@types/mocha": "^5.2.6",
        "@types/node": "^7.0.43",
        "@types/sinon": "^5.0.7",
        "@types/sinon-chai": "^3.2.2",
        "@types/socket.io": "^1.4.36",
        "@types/socket.io-client": "^1.4.32",
        "chai": "^4.2.0",
        "sinon": "^7.2.7",
        "sinon-chai": "^3.3.0",
        "tslint": "^5.11.0",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.3.3333",
        "vscode": "^1.1.33"
    },
    "dependencies": {
        "@eclipse-che/plugin": "latest",
        "@types/jquery": "^3.3.30",
        "cheerio": "1.0.0-rc.3",
        "express": "^4.17.1",
        "find-java-home": "^1.2.2",
        "fs-extra": "^8.0.1",
        "jade": "^1.11.0",
        "jsonc-parser": "^2.1.0",
        "mime-types": "^2.1.26",
        "mkdirp": "^0.5.1",
        "node-stream-zip": "^1.8.0",
        "open": "^7.0.3",
        "opn": "^5.5.0",
        "request": "^2.88.2",
        "request-progress": "^3.0.0",
        "rimraf": "^3.0.2",
        "serve-static": "^1.14.1",
        "showdown": "^1.9.0",
        "socket.io": "^2.1.1",
        "socket.io-client": "^2.1.1",
        "tmp": "^0.1.0",
        "vscode-nls": "^2.0.2"
    }
}
